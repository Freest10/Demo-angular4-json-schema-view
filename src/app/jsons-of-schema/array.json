{
  "schema": {
    "type": "object",
    "properties": {
      "comments": {
        "type": "array",
        "maxItems": 2,
          "items": {
          "type": "object",
          "properties": {
            "name": {
              "title": "Name",
              "type": "string"
            },
            "spam": {
              "title": "Spam",
              "type": "boolean",
              "default": true
            },
            "comment": {
              "title": "Comment",
              "type": "string",
              "maxLength": 20
            }
          }
        }
      }
    },
    "required": ["comment"]
  },
  "form": [
    {
      "key": "comments",
      "add": "New",
      "addButtonTitle": "Добавить Еще",
      "items": [
        "comments[].name",
        {
          "key": "comments[].spam",
          "type": "checkbox",
          "title": "Yes I want spam."
        },
        {
          "key": "comments[].comment",
          "type": "textarea",
          "validateMessages":{
            "required": "Required field"
          }
        }
      ]
    },
    {
      "type": "submit",
      "style": "btn-info",
      "title": "OK"
    }
  ]
}
