{
  "schema": {
    "type": "object",
    "title": "Comment",
    "properties": {
      "comments": {
        "type": "array",
        "items": {
          "type": "object",
          "properties": {
            "name": {
              "title": "Name",
              "type": "string"
            },
            "email": {
              "title": "Email",
              "type": "string",
              "pattern": "^\\S+@\\S+$",
              "validateMessages":{
                "pattern": "No pattern"
              }
            },
            "comment": {
              "title": "Comment",
              "type": "string",
              "maxLength": 20
            }
          }
        }
      }
    }
  },
  "form": [
    {
      "type": "help",
      "helpvalue": "<h4>Tabbed Array Example</h4>"
    },
    {
      "key": "comments",
      "type": "tabarray",
      "addButtonTitle": "Add tab",
      "maxItems": 3,
      "style": {
        "remove": "btn-danger"
      },
      "title": "{{'Tab'+$index }}",
      "items": [
        "comments[].name",
        "comments[].email",
        {
          "key": "comments[].comment",
          "type": "textarea"
        }
      ]
    },
    {
      "type": "submit",
      "style": "btn-default",
      "title": "OK"
    }
  ]
}
